{
  "name": "@sb-mig/desktop-app",
  "version": "0.1.0",
  "author": "Marcin Krawczyk <marckraw@icloud.com>",
  "description": "sb-mig desktop app",
  "main": "public/electron.js",
  "build": {
    "appId": "com.marckraw.sb-mig",
    "productName": "sb-mig",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extraFiles": [],
      "entitlements": "./build/entitlements.mac.plist"
    },
    "linux": {
      "target": "deb"
    }
  },
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "build-locally": "npm run react-build && npm run electron-build",
    "pack": "DEBUG=electron-builder electron-builder --dir",
    "build": "npm run react-build",
    "release": "yarn run build",
    "copy:appSettings": "echo 'here we will copy settings...'",
    "start": "yarn run copy:appSettings && concurrently -k \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electronmon .\"",
    "electron:package:mac": "yarn build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "electron:package:win": "yarn build && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "electron:package:linux": "yarn build && electron-builder -l -c.extraMetadata.main=build/electron.js"
  },
  "license": "ISC",
  "dependencies": {
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-root-path": "^1.0.16",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.5",
    "execa": "^5.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.3.0",
    "react-scripts": "^4.0.3",
    "sass": "^1.40.1",
    "shell-path": "2.1.0",
    "styled-components": "^5.3.1",
    "wait-on": "^6.0.0",
    "web-vitals": "^2.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.2.1",
    "concurrently": "^6.2.1",
    "electron": "^14.0.1",
    "electron-builder": "^22.11.7",
    "electronmon": "^2.0.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  }
}
